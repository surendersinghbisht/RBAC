pipeline {
    agent any

    environment {
        IMAGE_NAME = "my-dotnet-app"
        CONTAINER_NAME = "my-dotnet-container"
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/your-username/my-dotnet-app.git'
            }
        }

        stage('Build .NET') {
            steps {
                sh 'dotnet restore'
                sh 'dotnet build --configuration Release'
                sh 'dotnet test'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh "docker build -t $IMAGE_NAME ."
            }
        }

        stage('Run Docker Container') {
            steps {
                script {
                    // Stop old container if running
                    sh "docker rm -f $CONTAINER_NAME || true"
                    // Run new container
                    sh "docker run -d -p 5000:80 --name $CONTAINER_NAME $IMAGE_NAME"
                }
            }
        }
    }
}
